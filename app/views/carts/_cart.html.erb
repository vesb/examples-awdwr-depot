<h2>Your Cart</h2>

<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell">
      <%= number_to_currency(cart.total_price) %>
    </td>
    <td></td>
  </tr>
</table>

<div class="navigation">
  <%= link_to 'Continue shopping', store_index_path %> | <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure>' } %>
</div>
