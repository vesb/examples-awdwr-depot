<h2>Your Cart</h2>

<div class="table">
  <%= render(cart.line_items) %>
  <div class="row total_line">
    <span class="cell"></span>
    <span class="cell">Total: </span>
    <span class="cell total_cell"><%= number_to_currency(cart.total_price) %></span>
    <span class="cell"><%= button_to 'Empty', cart, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></span>
  </div>

  <div class="row">
    <span class="cell"></span>
    <span class="cell"></span>
    <span class="cell checkout">
      <%= button_to 'Checkout', new_order_path, method: :get %>
    </span>
  </div>
</div>
