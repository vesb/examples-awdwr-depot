<p id="notice"><%= notice %></p>

<h2>Your Cart</h2>

<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price) %></td>
      <td>
        <%= button_to 'X', item, method: :delete, data: { confirm: "Are you sure you want to remove '#{item.product.title}'?" } %>
      </td>
    </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell">
      <%= number_to_currency(@cart.total_price) %>
    </td>
    <td></td>
  </tr>
</table>

<div class="navigation">
  <%= link_to 'Back', store_index_path %> | <%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure>' } %>
</div>
